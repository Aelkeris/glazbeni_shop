@model glazbeni_shop.Models.Album

@{
    ViewBag.Title = "Izmjena";
}

<h2>Izmjena</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Album</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idalbum)

        <div class="form-group">
            @Html.LabelFor(model => model.imealbuma, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.imealbuma, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.imealbuma, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.zanr, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.zanr, new SelectList(ViewBag.naziviZanra, "idzanr", "imezanr", ""), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.zanr, "", new { @class = "text-danger" })
                @Html.ActionLink("Dodaj novi žanr", "Create", "Zanrs")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cijena, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cijena, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cijena, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.izvodac, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.izvodac, new SelectList(ViewBag.sviIzvodaci, "idizvodaca", "nazivizvodaca", ""), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.izvodac, "", new { @class = "text-danger" })
                @Html.ActionLink("Dodaj novog izvođača", "Create", "Izvodacs")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.slika, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.slika, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.slika, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.opis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.opis, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.opis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Povratak na listu", "Index")
</div>
