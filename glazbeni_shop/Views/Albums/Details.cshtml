                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.izvodac)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nazivIzvodaca.nazivizvodaca)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.opis)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.opis)
